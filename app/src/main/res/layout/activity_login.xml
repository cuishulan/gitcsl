<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bglogin"
    android:orientation="vertical"
    tools:context="com.bjfdkj.singlecsl.activity.function.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/shenggreen"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Login_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="欢迎登录"
            android:textColor="@color/ltgray"
            android:textSize="@dimen/stylesizecenter" />
    </LinearLayout>
    <!--登录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/user" />

            <EditText
                android:id="@+id/mName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:text="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/password" />

            <EditText
                android:id="@+id/mPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:password="true"
                android:text="123" />
        </LinearLayout>
        <!--下  按钮-->


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mLogin"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/buttonbga"
                android:text="点击登录"
                android:textColor="@color/ltgray" />

            <Button
                android:id="@+id/mFingerprint"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/buttonbga"
                android:text="指纹登录"
                android:textColor="@color/ltgray" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mUserregistration"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/buttonbga"
                android:text="用户登记"
                android:textColor="@color/ltgray" />

            <Button
                android:id="@+id/mResiger"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/buttonbga"
                android:text="档案入柜"
                android:textColor="@color/ltgray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mCamera"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/buttonbga"
                android:text="拍照"
                android:textColor="@color/ltgray" />
            <Button
                android:id="@+id/MyVideoCamera"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/buttonbga"
                android:text="录像"
                android:textColor="@color/ltgray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

