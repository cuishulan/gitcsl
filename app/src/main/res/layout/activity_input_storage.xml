<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bglogin"
    android:orientation="vertical"
    tools:context="com.bjfdkj.singlecsl.activity.function.InputStorageActivity">

    <!--入库 vertical 垂直
    com.zk.zhinengguizi.activity.function.InputStorageActivity
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/shenggreen"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/input_storage_Btnback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/left_backz" />

        <TextView
            android:id="@+id/input_storage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  档案入库信息录入"
            android:textColor="@color/ltgray"
            android:textSize="@dimen/stylesizecenter" />
    </LinearLayout>
    <!--入库信息录入-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="输入姓名："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit5"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <!--3333-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="输入性别："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit6"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="档案名称："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_nameEdit"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <!--222222-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="单位名称："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="档案位置："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit3"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="职位名称："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit4"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/dkgray" />
        <!--右边的 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="职位名称："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit7"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="职位名称："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit8"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="职位名称："
                    android:textColor="@color/shenggreen"
                    android:textSize="@dimen/stylesizexiao"></TextView>

                <EditText
                    android:id="@+id/input_storage_Edit9"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonbga_solid"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/stylesizexiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />

            <Button
                android:id="@+id/input_storge_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击出现对话框给用户传入文件图片" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/input_storage_btnReset"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonbga"
                    android:text="重新录入"
                    android:textColor="@color/ltgray" />

                <Button
                    android:id="@+id/input_storage_btncommit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonbga"
                    android:text="完成提交"
                    android:textColor="@color/ltgray" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
